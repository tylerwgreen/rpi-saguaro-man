{% extends 'layout.twig' %}
{% block title %}Home{% endblock %}
{% set page = 'home' %}

{% block body %}
	<div id="title-wrap" class="top">
		<h1>Video Recorder</h1>
	</div>
	<div class="middle">
		<div id="consent-btn-wrap" class="btn-wrap consented">
			<a id="consent-btn" class="btn" href="/record/true">
				<div class="icon-wrap">
					<i class="icon-video"></i>
				</div>
				<div class="text-wrap">
					<p><i class="icon-yes"></i>Consent</p>
				</div>
			</a>
		</div>
		<div id="no-consent-btn-wrap" class="btn-wrap noconsent">
			<a id="no-consent-btn" class="btn" href="/record/false">
				<div class="icon-wrap">
					<i class="icon-video"></i>
				</div>
				<div class="text-wrap">
					<p><i class="icon-no"></i>No Consent</p>
				</div>
			</a>
		</div>
	</div>
	<div id="info-btn-wrap" class="bottom">
		<p><a class="btn" href="/info"><i class="icon-info"></i>Info</p>
	</div>
{% endblock %}

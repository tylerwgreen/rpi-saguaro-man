#!/bin/bash
echo "#bash - Puppet people play start"
FILE=/media/pi/TYLERTHUMB/puppet-people.mp4
#FILE=/home/pi/saguaro-man/assets/video/recordings/converted/20170322-193216-no-consent.h264
#DISPLAY: 5 = HDMI, 4 = LCD
DISPLAY=5
#DISPLAY=4
AUDIO_OUTPUT=local
#AUDIO_OUTPUT=hdmi
echo "#bash - killing playback"
killall omxplayer
killall omxplayer.bin
echo "#bash - Playing $FILE"
omxplayer -o $AUDIO_OUTPUT --display=$DISPLAY $FILE
echo "#bash - Puppet people end"
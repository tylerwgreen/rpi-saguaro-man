#!/bin/bash
echo "#bash - Dusty loops play start"
FILE=/media/pi/TYLERTHUMB/dusty-loops.mp4
#FILE=/home/pi/saguaro-man/assets/video/recordings/converted/20170322-192812-consent.h264
#DISPLAY: 5 = HDMI, 4 = LCD
DISPLAY=5
#DISPLAY=4
AUDIO_OUTPUT=local
#AUDIO_OUTPUT=hdmi
echo "#bash - Dusty loops killing playback"
killall mpg123
killall omxplayer
killall omxplayer.bin
echo "#bash - Dusty loops playing $FILE"
omxplayer -o $AUDIO_OUTPUT --display=$DISPLAY $FILE
echo "#bash - Dusty loops end"
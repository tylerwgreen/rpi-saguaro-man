#!/bin/bash
echo Video play start
#HDMI
#DISPLAY=5
#LCD
DISPLAY=4
DISPLAY_WIDTH=800
DISPLAY_HEIGHT=480
VIDEO_WIDTH=660
VIDEO_HEIGHT=366
VIDEO_OFFSET_X=$(($DISPLAY_WIDTH - $VIDEO_WIDTH))
VIDEO_OFFSET_Y=$(($DISPLAY_HEIGHT - $VIDEO_HEIGHT))
SIZE=$VIDEO_OFFSET_X,$VIDEO_OFFSET_Y,$VIDEO_WIDTH,$VIDEO_HEIGHT
omxplayer --win $SIZE --display=$DISPLAY $1
echo Video play end